<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/imoji_search_result_width"
    android:layout_height="@dimen/imoji_search_result_height"
    android:orientation="vertical">

    <io.imoji.sdk.widgets.searchwidgets.ui.ImojiImageView
        android:id="@+id/imoji_search_result_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imoji_search_result_width"
        android:layout_centerInParent="true"
        android:padding="@dimen/imoji_search_result_placeholder_padding" />

    <TextView
        android:id="@+id/imoji_search_result_category_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imoji_search_result_text_box_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/search_widget_category_text"
        android:textSize="@dimen/imoji_search_result_text_box_text_size"
        android:visibility="gone" />
</RelativeLayout>
