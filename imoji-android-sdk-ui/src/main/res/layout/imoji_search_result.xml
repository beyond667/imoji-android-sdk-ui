<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/imoji_result_width_small"
    android:layout_height="@dimen/imoji_result_height_small"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/imoji_search_result_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imoji_result_width_small"
        android:layout_centerInParent="true">

        <com.felipecsl.gifimageview.library.GifImageView
            android:id="@+id/imoji_search_result_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/imoji_search_result_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/imoji_result_placeholder_padding_small" />

    </FrameLayout>

    <TextView
        android:id="@+id/imoji_search_result_category_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imoji_result_category_title_height_small"
        android:layout_below="@+id/imoji_search_result_container"
        android:gravity="center"
        android:textColor="@color/search_widget_category_text"
        android:textSize="@dimen/imoji_result_category_title_size_small"
        android:visibility="gone" />
</RelativeLayout>
