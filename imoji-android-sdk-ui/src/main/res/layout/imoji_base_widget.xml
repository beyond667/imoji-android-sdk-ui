<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/sticker_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/search_widget_sticker_separator"
        android:visibility="gone" />

    <ViewSwitcher
        android:id="@+id/widget_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/widget_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ViewSwitcher>

    <io.imoji.sdk.widgets.searchwidgets.ui.ImojiSearchBarLayout
        android:id="@+id/widget_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imoji_search_bar_height" />
</LinearLayout>
