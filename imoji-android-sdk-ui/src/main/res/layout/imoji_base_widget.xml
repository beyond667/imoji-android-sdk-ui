<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/widget_recycler"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/imoji_search_result_row_height"/>

    <io.imoji.sdk.widgets.searchwidgets.components.ImojiSearchBarLayout
        android:id="@+id/widget_search"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/imoji_search_bar_height" />

</LinearLayout>
